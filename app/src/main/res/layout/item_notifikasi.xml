<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_item_notif"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgProduk"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_product"
        android:background="@drawable/rounded_border" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan sudah di Jakarta"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan baru tiba di Jakarta dan akan dikirimkan ke Banda Aceh"
            android:textSize="12sp"
            android:textColor="#666666"
            android:maxLines="2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="top|end">

        <TextView
            android:id="@+id/tvWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h"
            android:textSize="12sp"
            android:textColor="#999999" />

        <View
            android:id="@+id/indicatorUnread"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"
            android:background="@drawable/bg_circle_dot"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
